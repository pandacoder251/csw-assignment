# Q5 Solution

import time
import random

def timer(func):
    def wrapper(*args, **kwargs):
        start = time.time()
        result = func(*args, **kwargs)
        end = time.time()
        print("Total time taken:", end - start, "seconds")
        return result
    return wrapper


@timer
def wait_random():
    t = random.uniform(0.5, 1.5)
    print("Sleeping for:", t, "seconds")
    time.sleep(t)

wait_random()
